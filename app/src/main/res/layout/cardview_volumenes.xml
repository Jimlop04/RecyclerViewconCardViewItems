<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/informacionVolumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgVolumen"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                />

            <TextView
                android:id="@+id/txtVolumenDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:text="Volumen-Numero-Revista"
                android:textColor="#190000"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtDoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Doi: "
                android:textColor="#0C0101"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtFechaPublicado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Publicado: "
                android:textColor="#0E0000"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>